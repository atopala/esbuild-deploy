{
  "name": "esbuild-deploy-workspace",
  "version": "1.0.0",
  "author": "Adrian Topala",
  "description": "Deploy your Node.js apps with esbuild - zero configuration, no node_modules needed. Smart module detection from package.json (ESM/CJS).",
  "private": true,
  "repository": "https://github.com/atopala/esbuild-deploy",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.19.2",
    "pnpm": ">=9.15.0"
  },
  "scripts": {
    "clean:build": "pnpm -r --parallel exec rimraf dist deploy tsconfig.tsbuildinfo",
    "clean:1-dependencies-r": "pnpm -r --parallel exec rimraf node_modules",
    "clean:2-dependencies-w": "pnpm exec rimraf node_modules",
    "clean:3-lock-file": "pnpm exec rimraf pnpm-lock.yaml",
    "clean-all": "run-s 'clean:*'"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tsconfig/node20": "^20.1.5",
    "esbuild-deploy": "workspace:^",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.18.2",
    "vite-node": "^2.1.8"
  }
}
