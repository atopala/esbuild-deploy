{
  "name": "esbuild-deploy-workspace",
  "version": "1.0.0",
  "author": "Adrian Topala",
  "description": "Deploy your Node.js apps with esbuild - zero configuration, no node_modules needed. Smart module detection from package.json (ESM/CJS).",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.19.2",
    "pnpm": ">=9.15.0"
  },
  "scripts": {
    "clean:build": "pnpm -r --parallel exec rm -rf dist deploy tsconfig.tsbuildinfo",
    "clean:1-dependencies-r": "pnpm -r --parallel exec rm -rf node_modules",
    "clean:2-dependencies-w": "pnpm exec rm -rf node_modules",
    "clean-all": "run-s 'clean:*'",
    "build": "pnpm -r run build",
    "build:1": "pnpm --filter='./packages/esbuild-deploy' run build",
    "build:2": "pnpm -r --filter='!./packages/esbuild-deploy' run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tsconfig/node20": "^20.1.5",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.18.2",
    "vite-node": "^2.1.8",
    "esbuild-deploy": "workspace:^"
  }
}
